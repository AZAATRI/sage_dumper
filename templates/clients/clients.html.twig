{% extends 'basecommercial.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('datatables') }}
{% endblock stylesheets %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('datatables') }}
{% endblock javascripts %}
{% block body %}
    {{ parent() }}
    <div class="container">
        <h2>Liste des clients</h2>
        <div class="alert alert-success fade in">
            <button data-dismiss="alert" class="close close-sm" type="button">
                <i class="icon-remove"></i>
            </button>
            En cliquant sur une ligne de la table, vous allez pouvoir acceder à plus de détails
        </div>
        <table id="clientsTable" class="table table-striped table-bordered nowrap table-hover" style="width:100%">
            <thead>
            <tr>
                <th>N° Client</th>
                <th>Intitulé Client	</th>
                <th>Contact</th>
                <th>Pays</th>
                <th>Ville</th>
                <th>Code postale</th>
            </tr>
            </thead>
            <tbody>
            {% for client in clients %}
                <tr class="clickable" data-href="{{ path('clients_details',{id : client.Code_Client}) }}">
                    <td>{{ client.Code_Client }}</td>
                    <td>{{ client.CT_Intitule }}</td>
                    <td>{{ client.CT_Contact }}</td>
                    <td>{{ client.CT_Pays }}</td>
                    <td>{{ client.CT_Ville }}</a></td>
                    <td>{{ client.CT_CodePostal }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <script>
        $(document).ready(function() {
            $('#clients_menu').addClass("active");
            var currentId;
            var table = $('#clientsTable').DataTable( {
                responsive: true
            } );
            $('table tbody tr.clickable').on('click', 'td', function () {
                if($(this).index() || !table.responsive.hasHidden()){
                    window.location.href = $(this).parent().data('href');
                }
            } );/*
            $('#example tbody ').on('click', 'tr', function () {
            } );*/
        } );
    </script>
{% endblock %}