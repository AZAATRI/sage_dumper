{% extends 'admin/baseadmin.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('datatables') }}
{% endblock stylesheets %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('datatables') }}
{% endblock javascripts %}
{% block body %}
    {{ parent() }}
    <div class="container">

        <div class="col-md-12">
        <h2>Liste des commerciaux</h2>
        <table id="example" class="table table-striped table-bordered nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>Reference</th>
                    <th>Nom</th>
                    <th>Prenom</th>
                    <th>Login</th>
                    <th>Mot de passe</th>
                    <th>Fonction</th>
                    <th>Ville</th>
                    <th>Telephone</th>
                    <th>Email</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                {% for commercial in commercials %}
                    <tr>
                        <td>{{ commercial.cKey }}</td>
                        <td>{{ commercial.lastname }}</td>
                        <td>{{ commercial.firstname }}</td>
                        <td>{{ commercial.user.username }}</td>
                        <td><a href="void:javascript(0)">{{ commercial.password|password_hide }}</a></td>
                        <td>{{ commercial.functionName }}</td>
                        <td>{{ commercial.city }}</td>
                        <td>{{ commercial.phone }}</td>
                        <td>{{ commercial.email }}</td>
                        <td>
                            <p data-placement="top" data-toggle="tooltip" title="Delete" style="text-align: center">
                                <button class="btn btn-danger btn-xs delete_commercial" data-title="Delete" data-toggle="modal" data-target="#delete" data-id="{{ commercial.id }}">
                                    <span class="fa fa-trash"></span>
                                </button>
                            </p>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        </div>
    </div>
    <div class="modal fade" id="delete" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="fa fa-remove" aria-hidden="true"></span></button>
                    <h4 class="modal-title custom_align -align-left" id="Heading">Delete this entry</h4>
                </div>
                <div class="modal-body">

                    <div class="alert alert-danger"><span class="fa fa-exclamation-triangle"></span> Are you sure you want to delete this Record?</div>

                </div>
                <div class="modal-footer ">
                    <button type="button" class="btn btn-success delete_yes" ><span class="fa fa-check"></span> Yes</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal"><span class="fa fa-times"></span> No</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <script>
        $(document).ready(function() {
            $('#commercials_menu').addClass("active");

            var currentId;
            var table = $('#example').DataTable( {
                "columnDefs": [
                    { "width": "1%", "targets": 0 }
                ]

            } );

            new $.fn.dataTable.FixedHeader( table );
            $("[data-toggle=tooltip]").tooltip();
            $('.delete_commercial').on('click',function(){
                currentId = $(this).data('id');
                $('.delete_yes').trigger('click');
            });
            $('.delete_yes').on('click',function(){
                if(currentId){
                    var url = '{{ path('commercials_remove',{'id' : 'currentId'}) }}';
                    url = url.replace("currentId", currentId);
                    window.location.href = url;
                }
            });
            $('.updater').on('click',function(){
                window.location.href = $(this).data('nextpath');
            });

        } );
    </script>
{% endblock %}