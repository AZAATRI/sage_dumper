<div class="container">
    <table id="client_documents_by_articles" class="table table-striped table-bordered nowrap table-hover" style="width:100%">
        <thead>
        <tr>
            <th>Piece</th>
            <th>Type</th>
            <th>Client</th>
            <th>Date</th>
            <th>Reference</th>
            <th>Dépot</th>
            <th>Article</th>
            <th>Quantité</th>
            <th>PU</th>
            <!--<th>MTHT</th>-->
            <!--<th>MTTTC</th>-->
            <th>Stock</th>
        </tr>
        </thead>
        <tbody>
        {% for document in documentsByArticles %}
            <tr>
                <td>{{ document.DO_Piece }}</td>
                <td>{{ document.DO_Type|document_type }}</td>
                <td>{{ document.CT_Intitule }}</td>
                <td>{{ document.DO_Date|date('Y-m-d') }}</td>
                <td>{{ document.Ref_Document }}</td>
                <td>{{ document.DE_Intitule }}</a></td>
                <td>{{ document.AR_Ref }}</a></td>
                <td>{{ document.Qte|number_format(0) }}</td>
                <td>{{ document.PU|number_format(3) }}</td>
                <!--<td>{{ document.MontantHT|number_format(3) }}</td>-->
                <!--<td>{{ document.MontantTTC|number_format(3) }}</td>-->
                <td>{{ document.Qte_Stock }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
